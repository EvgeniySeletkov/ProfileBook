<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileBook.Views.SignUpPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Padding="36, 36, 36, 50" HorizontalOptions="FillAndExpand">

            <StackLayout VerticalOptions="CenterAndExpand">
                <Entry x:Name="EntryLogin" Placeholder="Login" />
                <Entry x:Name="EntryPass" Placeholder="Password" IsPassword="True" />
                <Entry x:Name="EntryConfirmPass" Placeholder="Confirm Password" IsPassword="True" />
            </StackLayout>

            <Button x:Name="ButtonSignUp" Text="SIGN UP" BackgroundColor="#CC6633" VerticalOptions="CenterAndExpand" IsEnabled="False" Command="{Binding SignUpCommand}" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>