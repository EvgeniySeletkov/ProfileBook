<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProfileBook.Views.SignUpPage"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout Padding="36, 36, 36, 50" HorizontalOptions="FillAndExpand">

            <StackLayout VerticalOptions="CenterAndExpand">
                <Entry Placeholder="Login" />
                <Entry Placeholder="Password" IsPassword="True" />
                <Entry Placeholder="Confirm Password" IsPassword="True" />
            </StackLayout>

            <Button BackgroundColor="#CC6633" 
                    VerticalOptions="CenterAndExpand" 
                    IsEnabled="False"
                    Text="SIGN UP"
                    Command="{Binding SignUpTapCommand}" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>